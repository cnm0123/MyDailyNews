<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/jqmtx"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/iv_newsfavorite" />

    <TextView
        android:text="TextView"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp"
        android:id="@+id/tv_newsfavorite_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_newsfavorite_title"
        android:layout_below="@+id/tv_newsfavorite_date"
        android:layout_toEndOf="@+id/iv_newsfavorite" />

    <TextView
        android:text="TextView"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_newsfavorite_title"
        android:layout_toEndOf="@+id/iv_newsfavorite"
        android:id="@+id/tv_newsfavorite_category" />

</RelativeLayout>