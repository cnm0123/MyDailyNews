<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/jqmtx"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/iv_item_newslist" />

    <TextView
        android:text="TextView"
        android:layout_marginLeft="20dp"
        android:textSize="10sp"
        android:textColor="#00ffff"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_newslist"
        android:layout_toEndOf="@+id/iv_item_newslist"
        android:id="@+id/tv_item_newslist_date" />

    <TextView
        android:text="TextView"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:textColor="#ff00ff"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_newslist_title"
        android:layout_alignTop="@+id/iv_item_newslist"
        android:layout_toEndOf="@+id/iv_item_newslist" />
</RelativeLayout>